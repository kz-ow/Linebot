# ── Stage 1: Build dependencies ──
FROM python:3.12-slim AS builder-web
WORKDIR /app

# OS パッケージと Python ビルド依存だけをインストール
RUN apt-get update \
 && apt-get install -y --no-install-recommends build-essential libgomp1\
 && rm -rf /var/lib/apt/lists/*

# Web アプリの Python 依存
COPY requirements.web.txt .
RUN pip install --upgrade pip \
 && pip install --no-cache-dir -r requirements.web.dev.txt

# ── Stage 2: Runtime ──
FROM python:3.12-slim AS runtime-web
WORKDIR /app
ENV PYTHONUNBUFFERED=1 \
    PYTHONPATH="/app:${PYTHONPATH}"

# 最低限の OS ライブラリだけを再インストール
RUN apt-get update \
 && apt-get install -y --no-install-recommends awscli \
 && rm -rf /var/lib/apt/lists/*

# builder-web から pip パッケージをコピー
COPY --from=builder-web /usr/local /usr/local

# アプリケーションコードをコピー
COPY . /app

# (任意) 不要ファイルを除外する .dockerignore を併用するとより軽量に
EXPOSE 8000

CMD ["uvicorn", "app.main:app", \
     "--host", "0.0.0.0", \
     "--port", "8000", \
     "--reload"]